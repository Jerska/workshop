<p id="notice"><%= notice %></p>

<form action="/actors/search">
  <input id="search-input" type="text" placeholder="Search for actors..."/>
</form>
<hr />


<h1>Actors</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Rating</th>
      <th>Image path</th>
      <th>Alternative name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @actors.each do |actor| %>
      <tr>
        <td><%= actor.name %></td>
        <td><%= actor.rating %></td>
        <td><%= actor.image_path %></td>
        <td><%= actor.alternative_name %></td>
        <td><%= link_to 'Show', actor %></td>
        <td><%= link_to 'Edit', edit_actor_path(actor) %></td>
        <td><%= link_to 'Destroy', actor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Actor', new_actor_path %>
